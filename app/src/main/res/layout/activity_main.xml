<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пользователь: "
        android:textSize="16sp"/>

    <SurfaceView
        android:id="@+id/previewSurface"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/pulseRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- уд/мин"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/manualPulseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- уд/мин (ручной)"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/comparisonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сравнение: --"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/measurementHistory"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Начать измерение"/>

        <Button
            android:id="@+id/flashButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Включить подсветку"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/manualPulseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ручной пульс"/>

        <Button
            android:id="@+id/showHistoryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="История"/>
    </LinearLayout>
</LinearLayout>
